                  %label Email
                .form-group.form-inline
                  %input.form-control{:type => "email", :placeholder => "Enter email"}
                .form-group.form-inline
                  %button.btn-default Submit
            %h4 Disabled
            .section-format.mbxl.pbl
              %form
                .form-group
                  %label Email
                  %input.form-control.disabled{:type => "email", :placeholder => "Enter email", :disabled => ""}
                .form-group
                  %button.btn-default.disabled{:disabled => ""} Submit
            %h4 Large
            .section-format.mbxl.pbl
              %form
                .form-group.form-lg
                  %label Large
                  %input.form-control{:type => "text", :placeholder => "Larger"}
                .form-group.form-lg
                  %button.btn-default.btn-lg Large Btn
