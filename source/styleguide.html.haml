            %h4 Error/Acceptance States
            %p Click on the red "x" in the error state to clear the form field and rest the error.
            .section-format.mbxl.pbl
              %form
                .form-group.form-inline
                  %input.invalid{:type => "text", :placeholder => "Enter text", :value => "Wrong Answer"}
                  .svgicon.invalid
                    =partial 'images/svg-lib/close.svg'
                  .invalid-text Error please try again
                .form-group.form-inline
                  %input.valid{:type => "text", :placeholder => "Enter text", :value => "Right Answer"}
                  .svgicon.valid
                    =partial 'images/svg-lib/check_circle.svg'
                .form-group.form-inline
                  %input.loader{:type => "text", :placeholder => "Enter text", :value => "Hold up..."}
                  .svgicon.loading
                    =partial 'images/loading/spinner-sm.svg'
            %h4 Simple Forms
